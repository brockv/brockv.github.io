@{
    ViewBag.Title = "Campus Apartments";
    ViewBag.CheckBox = "Select here to give permission for the landlord or representative to enter your unit to perform the requested maintenance. We will call first.";
}
<h1 class="formTitle">@ViewBag.Title</h1>
<h1>@ViewBag.Message</h1>

@using (@Html.BeginForm("RequestLog", "Home", FormMethod.Post))
{
    <div class="container" style="margin-top: 40px;">
        <div class="col-md-4" style="float: left;">
            <label class="inputLabels">First Name:</label>
            @Html.TextBox("firstName", "", new
       {
           @class = "form-control",
           id = "firstName",
           name = "firstName",
           required = "required",
           autocomplete = "off"
       })
        </div>
        <div class="col-md-4" style="float: left;">

            <label class="inputLabels">Last Name:</label>
            @Html.TextBox("lastName", "", new
       {
           @class = "form-control",
           id = "lastName",
           name = "lastName",
           required = "required",
           autocomplete = "off"
       })
        </div>
        <div class="col-md-4" style="float: left;">

            <label class="inputLabels">Phone Number:</label>
            @Html.TextBox("phoneNumber", "", new
       {
           @class = "form-control",
           id = "phoneNumber",
           name = "phoneNumber",
           pattern = "^(\\+0?1\\s)?\\(?\\d{3}\\)?[\\s.-]\\d{3}[\\s.-]\\d{4}$",
           title = "10-Digit US phone number",
           required = "required",
           autocomplete = "off"
       })

        </div>
        <div class="col-md-4" style="float: left;">
            <label class="inputLabels">Apartment Name:</label>
            @Html.TextBox("apartmentName", "", new
       {
           @class = "form-control",
           id = "appartmentName",
           name = "appartmentName",
           required = "required",
           autocomplete = "off",
           width = "600px",
            })
        </div>
        <div class="col-md-4" style="float: left;">
            <label class="inputLabels">Unit Number:</label>
            @Html.TextBox("unitNumber", "", new
       {
           @class = "form-control",
           id = "unitNumber",
           name = "unitNumber",
           required = "required",
           autocomplete = "off"
       })
        </div>


        <div class="container">
            @Html.TextArea("request", "", new
       {
           placeholder = "Explanation of request, maintenance required, or complaint. Please be specific.",
           id = "requestDescription",
           name = "requestDescription",
           required = "required",
           autocomplete = "off",
           rows = "20",
           columns = "400"
       })

            <div class="col-md-4">
                <input id="btnSubmitForm" class="btn btn-default submitted" type="submit" value="Submit Request" />
            </div>

            <div>
                <input type="checkbox" value="allowEntry">
                <label id="allowEntryLabel">@ViewBag.CheckBox</label>
            </div>

        </div>
    </div>

}
